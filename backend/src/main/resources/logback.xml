<configuration>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

   <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %magenta([%thread]) %highlight(%-5level) %logger{36}.%M - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="no.nav.tilbakekreving" level="DEBUG"/>
    <logger name="no.nav.familie.http.sts" level="WARN"/>
    <logger name="org.apache.cxf" level="ERROR"/>
    <logger name="org.apache.hc" level="ERROR"/>
    <logger name="io.netty" level="ERROR"/>

</configuration>
